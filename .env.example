# GigaBot Environment Variables
# Copy this to .env and fill in your values

# ===========================================
# LLM Provider API Keys (at least one required)
# ===========================================

# OpenRouter - Access to many models via single API
# Get key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=

# Anthropic - Claude models
# Get key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# OpenAI - GPT models
# Get key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Moonshot AI - Kimi models (China)
# Get key at: https://platform.moonshot.cn/
MOONSHOT_API_KEY=

# DeepSeek - DeepSeek models (China)
# Get key at: https://platform.deepseek.com/
DEEPSEEK_API_KEY=

# GLM/Z.AI - Zhipu AI models (China)
# Get key at: https://open.bigmodel.cn/
GLM_API_KEY=

# Qwen/DashScope - Alibaba Cloud models (China)
# Get key at: https://dashscope.aliyuncs.com/
QWEN_API_KEY=

# ===========================================
# Channel Tokens (enable what you need)
# ===========================================

# Telegram Bot
# Create bot at: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=

# Discord Bot
# Create at: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=
DISCORD_APPLICATION_ID=

# Slack App
# Create at: https://api.slack.com/apps
SLACK_BOT_TOKEN=
SLACK_APP_TOKEN=
SLACK_SIGNING_SECRET=

# Signal (requires signal-cli setup)
SIGNAL_PHONE_NUMBER=

# Matrix
MATRIX_HOMESERVER=
MATRIX_USER_ID=
MATRIX_ACCESS_TOKEN=

# ===========================================
# Security Settings
# ===========================================

# Authentication mode: none, token, password, tailscale
NANOBOT_AUTH_MODE=none

# Auth token (if mode=token)
NANOBOT_AUTH_TOKEN=

# Password hash (if mode=password, use `nanobot security hash-password`)
NANOBOT_PASSWORD_HASH=

# ===========================================
# WebUI Settings
# ===========================================

# WebUI bind address (default: 127.0.0.1)
NANOBOT_UI_HOST=127.0.0.1

# WebUI port (default: 18790)
NANOBOT_UI_PORT=18790

# ===========================================
# Search (for web search tool)
# ===========================================

# Brave Search API
# Get key at: https://brave.com/search/api/
BRAVE_API_KEY=

# ===========================================
# Advanced
# ===========================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Workspace path (default: ~/.nanobot/workspace)
# NANOBOT_WORKSPACE=/path/to/workspace
